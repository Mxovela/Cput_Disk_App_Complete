end;

//SUBMIT BUTTON
procedure TMainForm.submitbtnClick(Sender: TObject);
var
  MainModuleInstance: TUni;
  userid, firstname, surname, RegNo, ReceiptNo, Bay, vehmake, vehcolour, vehmodel, Contact, Address, RegDate: string;
begin
  // Retrieve data from the form fields
  userid := UniDBEdit10.Text;
  firstname := UniDBEdit11.Text;
  surname := UniDBEdit12.Text;
  RegNo := ''; // We will manually input this field
  vehmake := UniDBEdit7.Text;
  vehmodel := UniDBEdit8.Text;
  vehcolour := UniDBEdit9.Text;
  ReceiptNo := UniDBEdit3.Text;
  Bay := UniDBEdit4.Text;
  Contact := UniDBEdit5.Text;
  Address := UniDBEdit6.Text;
  RegDate := FormatDateTime('yyyy-mm-dd', UniDBDateTimePicker1.DateTime);

  // Check if any required field is empty
  if (userid = '') or (firstname = '') or (surname = '') or
  (vehmake = '') or (vehmodel = '') or (vehcolour = '') or
     (ReceiptNo = '') or (Bay = '') or (Contact = '') or (Address = '') or (RegDate = '') then
  begin
    ShowMessage('Please fill in all fields');
    Exit;
  end;

  MainModuleInstance := Uni;
  try
    // Prepare SQL query to insert data into diskapplication table
    MainModuleInstance.tbDiskAppl.SQL.Text :=
      'INSERT INTO diskapplication (diskseq_id, reg_no, user_no, receipt_no, bay_no, vehmake, vehmodel, vehcolour, contact_no, address, reg_date) ' +
      'VALUES (:diskseq_id, :reg_no, :user_no, :receipt_no, :bay_no, :vehmake, :vehmodel, :vehcolour, :contact_no, :address, :reg_date)';
    MainModuleInstance.tbDiskAppl.ParamByName('diskseq_id').AsString := userid;
    MainModuleInstance.tbDiskAppl.ParamByName('reg_no').AsString := RegNo; // Manually input RegNo
    MainModuleInstance.tbDiskAppl.ParamByName('user_no').AsString := firstname + ' ' + surname;
    MainModuleInstance.tbDiskAppl.ParamByName('receipt_no').AsString := ReceiptNo;
    MainModuleInstance.tbDiskAppl.ParamByName('bay_no').AsString := Bay;
    MainModuleInstance.tbDiskAppl.ParamByName('vehmake').AsString := vehmake;
    MainModuleInstance.tbDiskAppl.ParamByName('vehmodel').AsString := vehmodel;
    MainModuleInstance.tbDiskAppl.ParamByName('vehcolour').AsString := vehcolour;
    MainModuleInstance.tbDiskAppl.ParamByName('contact_no').AsString := Contact;
    MainModuleInstance.tbDiskAppl.ParamByName('address').AsString := Address;
    MainModuleInstance.tbDiskAppl.ParamByName('reg_date').AsString := RegDate;
    MainModuleInstance.tbDiskAppl.ExecSQL;

    // Show message for successful insert
    ShowMessage('Data inserted successfully');

    // Refresh the dataset to reflect changes in the grid
    MainModuleInstance.tbDiskAppl.Close;
    MainModuleInstance.tbDiskAppl.Open;

    // Refresh the grid to display updated data
    diskGrid.Refresh;
  except
    on E: Exception do
      ShowMessage('Error: ' + E.Message);
  end;
end;




